<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Catalog\Block\Product\ListProduct">
        <plugin type="Konstanchuk\InfinityScroll\Plugin\Block\ProductList"
                name="konstanchuk_infinity_scroll_product_list" />
    </type>
    <type name="Magento\Catalog\Controller\Category\View">
        <plugin type="Konstanchuk\InfinityScroll\Plugin\Controller\CategoryView"
                name="konstanchuk_infinity_scroll_category_view" />
    </type>
</config>